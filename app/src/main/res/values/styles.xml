<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_32</item>
        <item name="android:textColor">@color/colorHeader</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextContentStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_4</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/colorContent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/dp_10</item>
        <item name="android:textSize">@dimen/sp_24</item>
        <item name="android:textColor">@color/colorTextButton</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@color/colorBackgroundButton</item>
    </style>

</resources>
